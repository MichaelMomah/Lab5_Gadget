@model Lab5_Gadgets.Models.appointment

@{ ViewData["Title"] = "Create"; }

<!--Generates the input form for creating an appointment-->
<h1>Create</h1>

<h4>appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="appointmentDate" class="control-label">Appointment Date</label>
                <input asp-for="appointmentDate" class="form-control" required="required" />
                <span asp-validation-for="appointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salesRepID" class="control-label">SalesRep</label>
                <select asp-for="salesRepID" class="form-control" asp-items="ViewBag.salesRepID"></select>
            </div>
            <div class="form-group">
                <label asp-for="customerID" class="control-label">Customer ID</label>
                <select asp-for="customerID" class="form-control" asp-items="ViewBag.customerID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
